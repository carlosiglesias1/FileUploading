<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fileuploading.fragments.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/BreadCrumb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/GoBack"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/BreadCrumb"
            android:backgroundTint="@color/cardview_dark_background"
            android:foreground="@drawable/ic_prev"
            android:foregroundTint="@color/white"
            android:maxWidth="75dp" />

        <ListView
            android:id="@+id/FileList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/GoBack" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ImagePreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:background="@color/cardview_shadow_start_color">

        <Button
            android:id="@+id/CloseImageViewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/cardview_dark_background"
            android:text="@string/close"
            android:textSize="20sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/nextImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/cardview_dark_background"
            android:foreground="@drawable/ic_next"
            android:foregroundTint="@color/white"
            app:borderWidth="0dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/prevImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/cardview_dark_background"
            android:foreground="@drawable/ic_prev"
            android:foregroundTint="@color/white"
            app:borderWidth="0dp" />

        <ImageView
            android:id="@+id/ImageViewer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/CloseImageViewer" />

    </RelativeLayout>
</FrameLayout>